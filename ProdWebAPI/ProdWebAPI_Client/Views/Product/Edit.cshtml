
@{
    Layout = null;
}

@model ProdWebAPI_Client.ViewModels.ProductViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="container">
        <div class="row">
            <section class="col-xs-12">

                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-tittle">Edit Products</h3>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            <div class="form-group">

                                @Html.LabelFor(model => model.Product.name, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.Product.name, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">

                                @Html.LabelFor(model => model.Product.description, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.Product.description, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">

                                @Html.LabelFor(model => model.Product.category, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.Product.category, new { @class = "form-control" })
                                </div>
                            </div>


                            <div class="form-group">

                                @Html.LabelFor(model => model.Product.price, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(model => model.Product.price, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-10 col-sm-offset-2">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    @Html.HiddenFor(model => model.Product.id)
                                </div>

                            </div>








                        }
                     </div>
                 </div>


                   
</section>
        </div>
     </div>




              
</body>
</html>
